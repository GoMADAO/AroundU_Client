<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.aroundu_client.NewNormalActivity" >

    <EditText
        android:id="@+id/norm_input"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:background="@drawable/editform"
        android:ems="10"
        android:gravity="top"
        android:hint="@string/norm_input"
        android:inputType="textMultiLine"
        android:labelFor="@+id/norm_input" >
        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/norm_send_btn"
        android:layout_width="160dp"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:layout_gravity="center"
        android:text="Send" />

</LinearLayout>
