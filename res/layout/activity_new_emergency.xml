<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.aroundu_client.NewImportanceActivity" >

    <TextView
        android:id="@+id/emer_abs"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="17dp"
        android:text="Abstract"
        android:layout_weight="0.08"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/emer_abs_input"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/editform"
        android:ems="10"
        android:layout_weight="0.2"
        android:gravity="top"
        android:hint="abstract of your emergency..."
        android:inputType="textMultiLine"
        android:labelFor="@+id/emer_abs" />
    
    <TextView
        android:id="@+id/emer_text"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="17dp"
        android:text="Details"
        android:layout_weight="0.08"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/emer_text_input"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/editform"
        android:ems="10"
        android:layout_weight="0.45"
        android:gravity="top"
        android:hint="Your Emergency..."
        android:inputType="textMultiLine"
        android:labelFor="@+id/emer_text" />

    <Switch
        android:id="@+id/map_on_turn"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.1"
        android:text="Location" />

    <Button
        android:id="@+id/emer_send_btn"
        android:layout_width="160dp"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:layout_marginTop="5dp"
        android:text="Send" />

</LinearLayout>
